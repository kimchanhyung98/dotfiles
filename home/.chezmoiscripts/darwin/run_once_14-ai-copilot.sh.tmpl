#!/bin/bash
#
# AI Copilot: superpowers (copy)

{{ if ne .chezmoi.os "darwin" }}
exit 0
{{ end }}

set -eufo pipefail

echo "[ai-copilot]"

# superpowers for Copilot
# - ~/superpowers에서 Copilot 스킬 경로로 복사 (개별 커스텀 가능)
COPILOT_SKILLS_DIR="$HOME/.copilot/skills/superpowers"

if [ -d "$HOME/superpowers/skills" ] && [ ! -d "$COPILOT_SKILLS_DIR" ]; then
    echo "Copying superpowers to Copilot skills..."
    mkdir -p "$(dirname "$COPILOT_SKILLS_DIR")"
    cp -r "$HOME/superpowers/skills" "$COPILOT_SKILLS_DIR"
fi

echo "[ai-copilot] done"
