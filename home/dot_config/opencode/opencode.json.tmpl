{{- /* ~/.config/opencode/opencode.json — OpenCode 핵심 설정 (Anthropic 기본, MCP 서버) */ -}}
{
  "provider": {
    "default": "anthropic"
  },
  "permissions": {
    "autoApprove": false
  },
  "agent": {
    "model": "claude-sonnet-4-5-20250929"
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    }
  },
  "mcp": {
    "augment-context-engine": {
      "type": "local",
      "command": ["auggie", "--mcp", "--mcp-auto-workspace"],
      "enabled": true
    }
  }
}
