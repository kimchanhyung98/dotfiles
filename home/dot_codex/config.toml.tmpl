# ~/.codex/config.toml — Codex CLI 핵심 설정

model = "gpt-5.3-codex"
model_reasoning_effort = "xhigh"

approval_policy = "never"
sandbox_mode = "danger-full-access"
web_search = "live"

# peon-ping 알림 연동
notify = ["bash", "{{ .chezmoi.homeDir }}/.claude/hooks/peon-ping/adapters/codex.sh"]

[features]
collaboration_modes = true

# 기본 지시사항 (andrej-karpathy-skills 4원칙)
[default.instructions]
text = """
Think Before Coding: Understand the full context before writing code.
Simplicity First: Choose the simplest solution and avoid unnecessary complexity.
Surgical Changes: Minimize change scope and don't modify unrelated code.
Goal-Driven Execution: Focus on the user's goal and prevent unnecessary expansion.
"""

# MCP servers
[mcp_servers.openai_developer_docs]
command = "npx"
args = ["-y", "mcp-remote", "https://developers.openai.com/mcp"]
enabled = true

[mcp_servers.context7]
command = "npx"
args = ["-y", "@upstash/context7-mcp@latest"]
enabled = true

[mcp_servers.augment-context-engine]
command = "auggie"
args = ["--mcp", "--mcp-auto-workspace"]
enabled = true
