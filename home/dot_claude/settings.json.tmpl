{{- /* ~/.claude/settings.json â€” Claude Code core settings */ -}}
{
  "permissions": {
    "allow": [],
    "deny": []
  },
  "enabledPlugins": [
    "superpowers",
    "everything-claude-code",
    "claude-hud",
    "peon-ping",
    "andrej-karpathy-skills",
    "claude-mem"
  ],
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/peon-ping/peon.sh session-start"
      },
      {
        "type": "command",
        "command": "bash ~/.claude-mem/hooks/session-start.sh"
      }
    ],
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/peon-ping/peon.sh user-prompt-submit"
      },
      {
        "type": "command",
        "command": "bash ~/.claude-mem/hooks/user-prompt-submit.sh"
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/peon-ping/peon.sh stop"
      },
      {
        "type": "command",
        "command": "bash ~/.claude-mem/hooks/stop.sh"
      }
    ],
    "PermissionRequest": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/peon-ping/peon.sh permission-request"
      }
    ],
    "Notification": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/peon-ping/peon.sh notification"
      }
    ],
    "SessionEnd": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/peon-ping/peon.sh session-end"
      }
    ],
    "PostToolUseFailure": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/peon-ping/peon.sh post-tool-use-failure"
      }
    ],
    "PreCompact": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/peon-ping/peon.sh pre-compact"
      }
    ],
    "Setup": [
      {
        "type": "command",
        "command": "bash ~/.claude-mem/hooks/setup.sh"
      }
    ],
    "PostToolUse": [
      {
        "type": "command",
        "command": "bash ~/.claude-mem/hooks/post-tool-use.sh"
      }
    ]
  }
}
